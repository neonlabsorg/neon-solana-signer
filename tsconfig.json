{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "sourceMap": true,
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "lib": [
      "es2020",
      "dom"
    ],
    "paths": {
      "@neonevm/solana-sign": [
        "./src"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/*spec.ts",
    "**/*config.ts"
  ],
  "references": [
    {
      "path": "./packages/core"
    }
  ]
}
